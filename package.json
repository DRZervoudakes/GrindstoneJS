{
	"name": "grindstone",
	"version": "3.2.0",
	"main": "dist/grindstone.min.js",
	"license": "MIT",
	"author": {
		"name": "dzervoudakes and contributors"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/dzervoudakes/GrindstoneJS"
	},
	"scripts": {
		"build": "gulp build",
		"clean": "gulp clean",
		"clean:coverage": "gulp clean:coverage",
		"clean:docs": "gulp clean:jsdoc",
		"docs": "gulp jsdoc",
		"lint": "eslint . --ext js",
		"lint:fix": "eslint . --ext js --fix",
		"prepublishOnly": "npm run lint && npm run build && npm test-codacy",
		"test": "gulp test",
		"test-codacy": "npm test && cat ./coverage/lcov.info | codacy-coverage --token a339a84a71454c7e89467539369fa12d",
		"start": "gulp watch"
	},
	"devDependencies": {
		"babel-core": "^6.26.3",
		"babel-eslint": "^8.2.6",
		"babel-plugin-transform-strict-mode": "^6.24.1",
		"babel-preset-env": "^1.7.0",
		"codacy-coverage": "^3.2.0",
		"common-tags": "^1.8.0",
		"eslint": "^5.2.0",
		"gulp": "^3.9.1",
		"gulp-babel": "^7.0.1",
		"gulp-clean": "^0.4.0",
		"gulp-concat": "^2.6.1",
		"gulp-header": "^2.0.5",
		"gulp-jest": "^4.0.2",
		"gulp-jsdoc3": "^2.0.0",
		"gulp-load-plugins": "^1.5.0",
		"gulp-preprocess": "^3.0.0",
		"gulp-rename": "^1.4.0",
		"gulp-strip-comments": "^2.5.2",
		"gulp-uglify": "^3.0.1",
		"husky": "^1.1.3",
		"jest-cli": "^23.4.2",
		"lint-staged": "^8.0.4",
		"minami": "^1.2.3"
	},
	"keywords": [
		"grindstone",
		"javascript",
		"library",
		"jquery",
		"lightweight"
	],
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"browserslist": [
		"> 1%",
		"last 2 versions",
		"not ie <= 9"
	]
}
